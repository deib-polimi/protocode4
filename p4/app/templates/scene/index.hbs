<div class="col-md-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/invalid_report"}}
            <br>
            <button type="button" {{bind-attr class=":btn :btn-block :btn-sm isDirty:btn-warning:btn-default"}} {{action
                "acceptChanges"}}>
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
            </button>
            <br>
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#home0" data-toggle="tab">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home0">
                    <br>
                    <label {{bind-attr class=":btn :btn-default :btn-block :btn-sm launcher:active"}}>
                        {{input type="checkbox" checked=launcher class="hidden"}}
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Set launcher
                    </label>
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-checkbox label="Has Menu" checked=hasMenu disabled=controller.cantChangeHasMenu}}
                    {{input-select label="Type" content=controller.sceneTypes optionLabelPath="content"
                        optionValuePath="content" selection=type}}
                    <!--
                        Case 1: singleVC
                            No choose for tab views
                            Label: View Controller
                            No creation VCs

                        Case 2: multiVC
                            Choose for tab views
                            Creation VCs
                            Case 2.1: Tabbed multiVC
                                No parentVC
                            Case 2.2: Non-tabbed multiVC
                                parentVC with label: Parent VC
                    -->
                    {{#unless controller.singleVCScene}}
                        {{input-checkbox label="Tab view for Smartphones" checked=smartphoneHasTabMenu}}
                        {{input-checkbox label="Tab view for Tablets" checked=tabletHasTabMenu}}
                    {{/unless}}
                    {{#unless controller.singleVCScene}}
                        {{#unless isTabbed}}
                            <div class="form-group">
                                <label class="col-sm-5" style="padding:8px 10px;text-align:right">Parent VC</label>
                                <label class="col-sm-5 green-link" style="padding:8px 10px;">{{#link-to 'viewController' parentViewController}}{{parentViewController.name}}{{/link-to}}</label>
                            </div>
                        {{/unless}}
                    {{else}}
                        <div class="form-group">
                            <label class="col-sm-5" style="padding:8px 10px;text-align:right">View Controller</label>
                            <label class="col-sm-5 green-link" style="padding:8px 10px;">{{#link-to 'viewController' parentViewController}}{{parentViewController.name}}{{/link-to}}</label>
                        </div>
                    {{/unless}}
                    {{#unless controller.singleVCScene}}
                        <div class="panel panel-dark">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    ViewControllers
                                </h3>
                            </div>
                            <ul class="list-group" id="collapse-views" class="collapse in">
                                {{#each item in childViewControllers}}
                                    <li class="list-group-item">
                                        {{#link-to "viewController" item}}{{item.name}}{{/link-to}}
                                    </li>
                                {{/each}}
                            </ul>
                            <div class="panel-footer">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-sm" {{action "createViewController"}}>
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {{/unless}}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "deleteScene"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
