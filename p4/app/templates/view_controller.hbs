<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading collapsed" data-toggle="collapse" data-target="#collapse-ui-phone-control" style="cursor:pointer">
            UIPhoneControls (Drag and drop) <span style="float:right">&#9660;</span>
        </div>
        <div class="panel-body collapse" id="collapse-ui-phone-control">
            {{#each controllers.uiPhoneControlTemplates itemController="uiPhoneControlTemplate" }}
                {{view App.UiPhoneControlTemplateView}}
            {{/each}}
        </div>
    </div>
</div>
<!-- Preview ViewController -->
{{#if controller.currentDeviceIsSmartphone}}
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="float:left">{{name}}</h3>
                <div class="col-xs-4 input-group pull-right">
    			    <span class="input-group-btn">
    			      	<button class="btn btn-default btn-sm" {{action 'decreaseZoom'}}>
    						<span class="glyphicon glyphicon-zoom-out" aria-hidden="true"></span>
    					</button>
    			    </span>
                    {{input type="number" value=zoomLevel class="form-control input-sm" step="0.2" min="0.1"}}
                    <span class="input-group-btn">
    			      	<button class="btn btn-default btn-sm" {{action 'increaseZoom'}}>
    						<span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
    					</button>
    			    </span>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body plotted">
                {{view App.SmartphoneView}}
            </div>
        </div>
    </div>
{{else}}
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="float:left">{{name}}</h3>
                <div class="col-xs-4 input-group pull-right">
                    <span class="input-group-btn">
                            <button class="btn btn-default btn-sm" {{action 'decreaseZoom'}}>
                                <span class="glyphicon glyphicon-zoom-out" aria-hidden="true"></span>
                            </button>
                    </span>
                    {{input type="number" value=zoomLevel class="form-control input-sm" step="0.2" min="0.1"}}
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-sm" {{action 'increaseZoom'}}>
                            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                        </button>
                    </span>
                </div>
                <div class="col-xs-2 input-group pull-right">
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-sm" {{bind-attr disabled="model.isInAScreen"}} {{action 'rotate'}}>
                            Rotate
                            <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                        </button>
                    </span>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body plotted">
                {{view App.TabletView}}
            </div>
        </div>
    </div>
{{/if}}
{{outlet}}
