<div class="col-md-3"></div>
<div class="col-md-3">
    <ul class="nav nav-tabs nav-justified">
        <li role="presentation" class="active">
            {{#link-to ""}}Smartphone & Tablet{{/link-to}}
        </li>
        <li role="presentation">
            {{#link-to "watchControllers"}}Smartwatch{{/link-to}}
        </li>
    </ul>
    <div class="panel-group">
        <div id="scenes-panel" class="panel panel-default">
            <div class="panel-heading" data-toggle="collapse" data-target="#collapse-views">
                <h3 class="panel-title">Scenes</h3>
            </div>
            <ul class="list-group" id="collapse-views" class="collapse in">
                {{#each item in controller item-controller="scene" }}
                    <li class="list-group-item">
                        {{#link-to "scene" item}}
                            {{#if item.launcher}}
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            {{/if}}
                            {{item.name}}
                        {{/link-to}}
                    </li>
                {{/each}}
                {{#if isCreating}}
                    <li class="list-group-item">
                        <div class="input-group">
                            {{focus-input value=newNameScene class="form-control input-sm"
                                          focus-out="createScene" insert-newline="createScene"}}
                            <span class="input-group-btn">
                            <button type="button" class="btn btn-default btn-sm" {{action "createScene"}}>
                                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-sm" {{action "setCreating" false}}>
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </span>
                        </div>
                    </li>
                {{/if}}
            </ul>
            <div class="panel-footer">
                <div class="btn-group">
                    <button type="button" class="btn btn-default btn-sm" {{action "setCreating" true}}>
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading collapsed" data-toggle="collapse" data-target="#collapse-ui-phone-control"
             style="cursor:pointer">
            UIPhoneControls (Drag and drop) <span style="float:right">&#9660;</span>
        </div>
        <div class="panel-body collapse" id="collapse-ui-phone-control">
            {{#each controllers.uiPhoneControlTemplates itemController="uiPhoneControlTemplate" }}
                {{view App.UiPhoneControlTemplateView}}
            {{/each}}
        </div>
    </div>
</div>
{{outlet}}
