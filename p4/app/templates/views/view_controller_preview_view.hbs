<!-- #if valid is used not to show controls inside invalid chains -->
{{#if viewControllerToShow}}
    {{#each viewControllerToShow.uiPhoneControlsToShow}}
        {{#if valid}}
            {{view App.UiPhoneControlView}}
        {{/if}}
    {{/each}}
{{else}}
    {{#each childViewController.uiPhoneControlsToShow}}
        {{#if valid}}
            {{view App.UiPhoneControlView}}
        {{/if}}
    {{/each}}
{{/if}}
