{{screen-canvas model=model}}
{{#link-to "viewController" model tagName="div" class="expanded-area"}}{{/link-to}}

<!-- Others uiPhoneControls in the same screen (others viewControllers in the same screen) -->
{{#if haveScreen}}
    {{#each vc in sceneScreen.viewControllers}}
        {{#each vc.uiPhoneControls}}
            {{view App.UiPhoneControlView}}
        {{/each}}
    {{/each}}
{{else}}
    <!-- UiPhoneControls -->
    {{#each uiPhoneControls}}
        {{view App.UiPhoneControlView}}
    {{/each}}
{{/if}}

<!-- View controllers separation lines -->
{{#if haveScreen}}
    {{#each st in separationLinesStyle}}
        <div class="separation-line" {{bind-attr style=st}}></div>
    {{/each}}
{{/if}}

<div class="status-bar"></div>
<!-- App Menu Icon -->
{{#if hasMenu}}
    <div class="action-bar">
        {{#link-to "appMenu" menu}}<div class="icon-menu"></div>{{/link-to}}
        <div class="bar-content-menu">{{controllers.editor.name}}</div>
    </div>
{{else}}
    <div class="action-bar">
        <div class="bar-content">{{controllers.editor.name}}</div>
    </div>
{{/if}}

<!-- Tab Menu (Multiple screens in a scene) -->
{{#if model.hasTabMenu}}
    {{view App.MenuTabView}}
{{/if}}

<!-- App Menu -->
{{#if hasMenu}}
    {{view App.MenuView}}
    {{#link-to "viewController" model}}{{view App.MenuViewShadow}}{{/link-to}}
{{/if}}

<div class="command-bar"></div>
