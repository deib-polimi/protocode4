<div class="col-md-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            <button type="button" {{bind-attr class=":btn :btn-block :btn-sm controller.isDirtyOverride:btn-warning:btn-default"}} {{action
                "acceptChanges"}}>
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
            </button>
            <br>
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#home0" data-toggle="tab">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </li>
                {{#if varyForTablets}}
                    <li>
                        <a href="#screen1" data-toggle="tab">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 1
                        </a>
                    </li>
                    <li>
                        <a href="#screen2" data-toggle="tab">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 2
                        </a>
                    </li>
                    <li>
                        <a href="#screen3" data-toggle="tab">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 3
                        </a>
                    </li>
                    <li>
                        <a href="#screen4" data-toggle="tab">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 4
                        </a>
                    </li>
                {{/if}}
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home0">
                    <br>
                    <label {{bind-attr class=":btn :btn-default :btn-block :btn-sm launcher:active"}}>
                        {{input type="checkbox" checked=launcher class="hidden"}}
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Set launcher
                    </label>
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-checkbox label="Has Menu" checked=hasMenu}}
                    {{input-checkbox label="Vary for tablets" checked=varyForTablets}}
                    <div class="panel panel-dark">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                ViewControllers
                            </h3>
                        </div>
                        <ul class="list-group" id="collapse-views" class="collapse in">
                            {{#each item in viewControllers}}
                                <li class="list-group-item">
                                    {{#link-to "viewController" item}}{{item.name}}{{/link-to}}
                                </li>
                            {{/each}}
                        </ul>
                        <div class="panel-footer">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" {{action "createViewController"}}>
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {{#if varyForTablets}}
                    <!-- screen 1 -->
                    <div class="tab-pane fade" id="screen1">
                        <br>
                        {{input-text label="Title" value=controller.screens.content.0.name}}
                        <br><br>
                        {{input-checkbox label="Has Tab Menu" checked=controller.screens.content.0.hasTabMenu disabled=controller.screens.content.0.cantHaveTabMenu}}
                        <br><br><br>
                        <p align="center" style="padding-top: 5px;border-top: 1px solid #ddd;padding-bottom: 5px;border-bottom: 1px solid #ddd;"><b>Screen 1 ViewControllers</b></p>
                        <ul class="list-group" id="collapse-views" class="collapse in">
                            {{#each item in controller.screens.content.0.viewControllers}}
                                <li class="list-screen-item">
                                    <label class="col-sm-4" style="padding-top:8px;">
                                        {{#link-to 'viewController' item}}{{item.name}}{{/link-to}}
                                    </label>
                                    <label class="col-sm-2" style="padding-top:8px;">Space%:</label>
                                    <div class="col-sm-4">
                                        {{input
                                            value=item.widthPercentInScreen
                                            class="form-control input-sm"
                                            type="number"
                                            min="0.05"
                                            max=item.maxWidthPercentInScreen
                                            step="0.05"
                                            viewName="numericField"
                                            focus-out="acceptChanges"
                                            insert-newline="acceptChanges"
                                        }}
                                    </div>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-sm" {{action "removeViewController" 0 item}}>
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                    </div>
                                </li>
                            {{/each}}
                        </ul>
                        <div class="form-group">
                            <div class="col-sm-7">
                                {{view Ember.Select
                                       class="form-control input-sm"
                                       content=controller.availableViewControllers
                                       optionLabelPath="content.name"
                                       optionValuePath="content"
                                       selection=controller.addedViewController
                                       prompt="Select view"}}
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm btn-add-colored" {{action "addViewController" 0}}>
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </div>
